            {{ entity.name + ' ' + entity.name | lowercase + '_' + i | string + ' = new ' + entity.name + '(' }}
                {%- for property in default_constructor -%}
                {{- property | repository_configuration_value -}}
                {% if not loop.last %}{{ ', ' }}{% endif %}
                {%- endfor -%}
            {{ ');' }}
            {% endfor %}
            {% endfor %}

            {{ '// Save objects to repositories' }}
            {% for entity in model.entities %}
            {{ entity.name | lowercase + 'Repository.saveAll(List.of(' + entity.name | lowercase | generated_objects_names + '));' }}
            {% endfor %}

